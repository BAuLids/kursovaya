<Page x:Class="Оформление_заказов.Pages.ReportsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Оформление_заказов.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ReportsPage">

    <Grid Background="#FFF66363">
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Button Content="Отчёт о заказах" Command="{Binding OpenReg}" Grid.Row="1" Grid.Column="1" Margin="0,0,200,0" FontSize="17" FontWeight="Bold"/>
        <Button Content="Отчёт по меню" Command="{Binding OpenMenu}" Grid.Column="1" Grid.Row="1" Margin="205,0,0,0" FontSize="17" FontWeight="Bold"/>
        <Button Content="Назад" Command="{Binding Back}" Grid.Column="2" Grid.Row="2" Margin="0,232,0,-263" FontSize="17" FontWeight="Bold" Background="#FFE62A2A"/>
    </Grid>
</Page>
