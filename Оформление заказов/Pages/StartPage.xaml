<Page x:Class="Оформление_заказов.Pages.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Оформление_заказов.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="280"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="460"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="1">
        </StackPanel>
        <Button Content="Сделать Заказ!" Command="{Binding Start}" Grid.Column="1"  Grid.Row="1" FontWeight="Bold" FontSize="20"/>
        <Button Content="Просмотр посетителей" Command="{Binding ViewUser}" Grid.Column="1"  Grid.Row="3" FontWeight="Bold" FontSize="20"/>
        <Button Grid.Row="0" Grid.Column="2" Content="Отчёт" Command="{Binding CreateRep}" Margin="0,0,0,237" FontWeight="Bold" FontSize="20"/>
    </Grid>
</Page>
